# ===========================
# 🗃️ DATABASE SETTINGS
# ===========================
DB_URL=jdbc:mysql://mysql:3306/drawingdb?useSSL=false&allowPublicKeyRetrieval=true&useUnicode=true&characterEncoding=utf8mb4&serverTimezone=Asia/Seoul
DB_USERNAME=root
DB_PASSWORD=root

# ===========================
# 🧩 SPRING PROFILE
# ===========================
SPRING_PROFILES_ACTIVE=prod

# ===========================
# 🔐 JWT SETTINGS
# ===========================
# 운영 시 꼭 환경 변수로 override 하세요 (랜덤 32~64자 이상 권장)
JWT_SECRET=your_prod_secret
JWT_ACCESS_EXP=3600
JWT_REFRESH_EXP=1209600

# ===========================
# 🌍 SWAGGER & CORS
# ===========================
SWAGGER_ENABLED=true
CORS_ENABLED=true
# 여러 도메인을 허용하려면 콤마(,)로 구분
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===========================
# 🧠 JVM OPTIONS
# ===========================
JAVA_TOOL_OPTIONS=-XX:MaxRAMPercentage=75 -XX:InitialRAMPercentage=50

# ===========================
# ⚙️ SERVER SETTINGS
# ===========================
SERVER_PORT=8080
TZ=Asia/Seoul
